        .row
            .col-lg-3
                include _pug-includes/navbar.pug
            .col-lg-9
        
                // INTRODUCTION SECTION
                section.bg-light.mb-5#intro
                    +heading('Intro', 'Introduction', 'Introduction', 'mb-3')
